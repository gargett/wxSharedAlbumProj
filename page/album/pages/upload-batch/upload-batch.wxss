html {
  height: 100%;
}
body {
  height: 100%;
  position: relative;
}
.top_text{
    height: 230.25rpx;
    border-radius:15rpx;
    font-size:33.75rpx;
    color: #666666;
}
.top_text textarea{
    border-radius:15rpx;
    background-color: #e5e5e5;
    border: 0;
    padding: 16.999995rpx 24rpx;
    font-size: 33.99999975rpx;
    width: 100%;
    height:100%;
    resize:none;
}
.pic_list{
    margin-top: 10.99995rpx;
    font-size: 0;
}
.picList_item {
  width: 230rpx;
  height: 159.75rpx;
  display: inline-block;
  margin-top: 6rpx;
  position: relative;
  vertical-align: middle;
  overflow: hidden;
}
.picList_item:nth-of-type(3n-1) {
  margin-left:6rpx
}
.picList_item:nth-of-type(3n) {
  margin-left:6rpx
}
.batch_info{
    height: 137.25rpx;
    line-height: 137.25rpx;
    width: 705rpx;
    font-size:33.999999975rpx ;
    border-bottom:solid 0.75rpx #d4d4d4;
    position: relative;
    overflow: hidden;
}
#position_box{
    margin-top:60rpx;

}
.batch_info span:nth-of-type(1)  {
    display: inline-block;
    width:39.99999975rpx;
    height:45rpx;
    position: relative;
    top:.1125rpx;
}
.batch_info span:nth-of-type(3)  {
    display: inline-block;
    width:47.49999975rpx;
    height:55.5rpx;
    background: url('/shared_static/images/btn_next_shangchuan@2x.png') no-repeat;
    background-position: center center;
    background-size: cover;
    position: relative;
    top:.450rpx;
    float: right;
}
.line_bottom{
    height:0.975rpx ;
    width: 667.5rpx;
    margin-left: 33.75rpx;
    background-color: #b8b8b8;
}
.upload_btn{
  width: 200.25rpx;
  height: 90rpx;
  border-radius:45rpx;
  line-height: 90rpx;
  position: fixed;
  bottom:32.25rpx;
  left: 0;
  right: 0;
  margin: auto;
  background-color: #20d575;
  text-align: center;
  font-size:36rpx;
  color: #ffffff;
  z-index: 2;
}
#selectDate {
  /* display: none; */
}
.picList_item .deletePics {
  width:51.74999999999999rpx;
  height:51.74999999999999rpx;
  position: absolute;
  right:15rpx;
  top:15rpx;
}
.picList_item .deletePics image {
  width: 100%;
  height: 100%;
}
.add_pic {
  border: 1rpx dashed #62d28c;
  font-size: 80.25rpx;
  text-align: center;
  line-height: 159.75rpx;
  color:  #40c873;
}
#selectDate {
   display: inline-block;
   width: 100%;
   height: 100%;
   opacity: 0;
   position: absolute;
   left: 0;
   top: 0;
   z-index: 1;
}
#locationtab {
  padding-top: 30rpx;
}
#uploadtab {
  padding: 67.5rpx 20rpx 165rpx 20rpx;
}
#uploadtab, #locationtab {
  display: none;
}
#uploadtab.active, #locationtab.active {
  display: block;
}
#position_box_text i, #date_box_text i {
  color: #999999;
  font-style: normal;
}
#position_box_text em, #date_box_text em {
  font-weight: normal;
  margin-left:22.5rpx;
}
.jiaocha {
  display: inline-block;
  width:47.25rpx;
  height:47.25rpx;
  line-height:.4725rpx;
  position: relative;
  top:45rpx;
  float: right;
  transform: rotate(45deg);
  color: #999999;
  text-align: center;
  font-size:39.75rpx;
  z-index: 2;
  display: none;
}
.hasContent .jiaocha {
  display: block;
}
.picList_item image {
  object-fit:cover;
}
#prog {
  position: fixed;
  width: 100%;
  height: 20rpx;
  z-index: 8;
  top: 0;
}
