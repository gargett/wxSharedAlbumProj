#moreFunc {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 6;
   display: none; 
}

#moreFunc_body {
  box-sizing: content-box;
  width: 100%;
  background: white;
  position: absolute;
  bottom: 0;
  left: 0;
}

#moreFunc_header {
  height: 81rpx;
  line-height: 80.25rpx;
  text-align: center;
  background: #20d575;
  color: white;
  font-size:36rpx;
}

#moreFunc_cancel {
  width:66rpx;
  height:66rpx;
  position: absolute;
  right:7.5rpx;
  top: -73.5rpx;
}

.moreFunc_item {
  padding:0 30rpx;
  height: 135rpx;
  line-height: 135rpx;
  font-size:33.75rpx;
}
.moreFunc_item image {
  display: block;
  width: 75rpx;
  height: 75rpx;
  float: right;
  margin-top: 22.5rpx;
}
.moreFunc_item.disab {
  display: none;
}
#moreFunc_cancel image {
  width: 100%;
  height: 100%;
}